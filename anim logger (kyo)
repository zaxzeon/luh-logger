-- your home
game.StarterGui:SetCore("SendNotification", {
    Title = "Anim Logger",
    Text = "Thanks for using Anim Logger by Kyo",
    Icon = "rbxassetid://6031075938",
    Duration = 5
})

  local ScreenGui = Instance.new("ScreenGui")
  local MainFrame = Instance.new("Frame")
  local UICorner = Instance.new("UICorner")
  local CloseButton = Instance.new("TextButton")
  local MinimizeButton = Instance.new("TextButton")
  local ScrollingFrame = Instance.new("ScrollingFrame")
  local UIListLayout = Instance.new("UIListLayout")
  local TitleLabel = Instance.new("TextLabel")
  local AnimPlayerButton = Instance.new("TextButton")
  local AnimPlayerFrame = Instance.new("Frame")
  local AnimPlayerCorner = Instance.new("UICorner")
  local AnimPlayerTitle = Instance.new("TextLabel")
  local AnimPlayerClose = Instance.new("TextButton")
  local AnimPlayerMinimize = Instance.new("TextButton")
  local AnimIDInput = Instance.new("TextBox")
  local AnimIDCorner = Instance.new("UICorner")
  local PlayButton = Instance.new("TextButton")
  local PlayButtonCorner = Instance.new("UICorner")
  local StopButton = Instance.new("TextButton")
  local StopButtonCorner = Instance.new("UICorner")

  ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
  ScreenGui.ResetOnSpawn = false

  MainFrame.Name = "MainFrame"
  MainFrame.Parent = ScreenGui
  MainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  MainFrame.Position = UDim2.new(0.5, -150, 0.7, -100)
  MainFrame.Size = UDim2.new(0, 300, 0, 200)
  MainFrame.Active = true
  MainFrame.Draggable = true
  MainFrame.BackgroundTransparency = 1

  -- Animation setup
  local function fadeIn()
      local tweenInfo = TweenInfo.new(
          1, -- Duration
          Enum.EasingStyle.Quad,
          Enum.EasingDirection.Out
      )
      
      local positionTween = game:GetService("TweenService"):Create(MainFrame, tweenInfo, {
          Position = UDim2.new(0.5, -150, 0.5, -100),
          BackgroundTransparency = 0
      })
      
      positionTween:Play()
  end

  task.wait(0.5) -- Small delay before animation
  fadeIn()

  UICorner.Parent = MainFrame
  UICorner.CornerRadius = UDim.new(0, 10)

  TitleLabel.Name = "TitleLabel"
  TitleLabel.Parent = MainFrame
  TitleLabel.BackgroundTransparency = 1
  TitleLabel.Position = UDim2.new(0, 10, 0, 5)
  TitleLabel.Size = UDim2.new(0, 200, 0, 20)
  TitleLabel.Font = Enum.Font.GothamBold
  TitleLabel.Text = "Kyo's Anim Logger"
  TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
  TitleLabel.TextSize = 14.000
  TitleLabel.TextXAlignment = Enum.TextXAlignment.Left

  CloseButton.Name = "CloseButton"
  CloseButton.Parent = MainFrame
  CloseButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  CloseButton.Position = UDim2.new(1, -25, 0, 5)
  CloseButton.Size = UDim2.new(0, 20, 0, 20)
  CloseButton.Font = Enum.Font.SourceSansBold
  CloseButton.Text = "X"
  CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
  CloseButton.TextSize = 14.000
  CloseButton.MouseButton1Click:Connect(function()
      ScreenGui:Destroy()
  end)

  MinimizeButton.Name = "MinimizeButton"
  MinimizeButton.Parent = MainFrame
  MinimizeButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  MinimizeButton.Position = UDim2.new(1, -50, 0, 5)
  MinimizeButton.Size = UDim2.new(0, 20, 0, 20)
  MinimizeButton.Font = Enum.Font.SourceSansBold
  MinimizeButton.Text = "-"
  MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
  MinimizeButton.TextSize = 14.000
  MinimizeButton.MouseButton1Click:Connect(function()
      if MainFrame.Size == UDim2.new(0, 300, 0, 200) then
          MainFrame.Size = UDim2.new(0, 300, 0, 30)
          ScrollingFrame.Visible = false
      else
          MainFrame.Size = UDim2.new(0, 300, 0, 200)
          ScrollingFrame.Visible = true
      end
  end)

  AnimPlayerButton.Name = "AnimPlayerButton"
  AnimPlayerButton.Parent = MainFrame
  AnimPlayerButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  AnimPlayerButton.Position = UDim2.new(1, 5, 0, 0)
  AnimPlayerButton.Size = UDim2.new(0, 80, 0, 30)
  AnimPlayerButton.Font = Enum.Font.SourceSansBold
  AnimPlayerButton.Text = "Anim Player"
  AnimPlayerButton.TextColor3 = Color3.fromRGB(255, 255, 255)
  AnimPlayerButton.TextSize = 14.000

  AnimPlayerFrame.Name = "AnimPlayerFrame"
  AnimPlayerFrame.Parent = ScreenGui
  AnimPlayerFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  AnimPlayerFrame.Position = UDim2.new(0.5, 100, 0.5, -100)
  AnimPlayerFrame.Size = UDim2.new(0, 200, 0, 150)
  AnimPlayerFrame.Visible = false
  AnimPlayerFrame.Active = true
  AnimPlayerFrame.Draggable = true

  AnimPlayerCorner.Parent = AnimPlayerFrame
  AnimPlayerCorner.CornerRadius = UDim.new(0, 10)

  AnimPlayerTitle.Name = "AnimPlayerTitle"
  AnimPlayerTitle.Parent = AnimPlayerFrame
  AnimPlayerTitle.BackgroundTransparency = 1
  AnimPlayerTitle.Position = UDim2.new(0, 10, 0, 5)
  AnimPlayerTitle.Size = UDim2.new(0, 140, 0, 20)
  AnimPlayerTitle.Font = Enum.Font.GothamBold
  AnimPlayerTitle.Text = "Animation Player"
  AnimPlayerTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
  AnimPlayerTitle.TextSize = 14.000
  AnimPlayerTitle.TextXAlignment = Enum.TextXAlignment.Left

  AnimPlayerClose.Name = "AnimPlayerClose"
  AnimPlayerClose.Parent = AnimPlayerFrame
  AnimPlayerClose.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  AnimPlayerClose.Position = UDim2.new(1, -25, 0, 5)
  AnimPlayerClose.Size = UDim2.new(0, 20, 0, 20)
  AnimPlayerClose.Font = Enum.Font.SourceSansBold
  AnimPlayerClose.Text = "X"
  AnimPlayerClose.TextColor3 = Color3.fromRGB(255, 255, 255)
  AnimPlayerClose.TextSize = 14.000

  AnimIDInput.Name = "AnimIDInput"
  AnimIDInput.Parent = AnimPlayerFrame
  AnimIDInput.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
  AnimIDInput.Position = UDim2.new(0.1, 0, 0.3, 0)
  AnimIDInput.Size = UDim2.new(0.8, 0, 0, 30)
  AnimIDInput.Font = Enum.Font.SourceSans
  AnimIDInput.PlaceholderText = "Enter Animation ID"
  AnimIDInput.Text = ""
  AnimIDInput.TextColor3 = Color3.fromRGB(255, 255, 255)
  AnimIDInput.TextSize = 14.000

  AnimIDCorner.Parent = AnimIDInput
  AnimIDCorner.CornerRadius = UDim.new(0, 8)

  PlayButton.Name = "PlayButton"
  PlayButton.Parent = AnimPlayerFrame
  PlayButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  PlayButton.Position = UDim2.new(0.25, 0, 0.7, 0)
  PlayButton.Size = UDim2.new(0.5, 0, 0, 30)
  PlayButton.Font = Enum.Font.SourceSansBold
  PlayButton.Text = "Play Animation"
  PlayButton.TextColor3 = Color3.fromRGB(255, 255, 255)
  PlayButton.TextSize = 14.000

  PlayButtonCorner.Parent = PlayButton
  PlayButtonCorner.CornerRadius = UDim.new(0, 8)

  StopButton.Name = "StopButton"
  StopButton.Parent = AnimPlayerFrame
  StopButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
  StopButton.Position = UDim2.new(0.35, 0, 0.85, 0)
  StopButton.Size = UDim2.new(0.3, 0, 0, 20)
  StopButton.Font = Enum.Font.SourceSansBold
  StopButton.Text = "Stop"
  StopButton.TextColor3 = Color3.fromRGB(255, 255, 255)
  StopButton.TextSize = 14.000

  StopButtonCorner.Parent = StopButton
  StopButtonCorner.CornerRadius = UDim.new(0, 8)

  ScrollingFrame.Parent = MainFrame
  ScrollingFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
  ScrollingFrame.Position = UDim2.new(0, 10, 0, 35)
  ScrollingFrame.Size = UDim2.new(0, 280, 0, 155)
  ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
  ScrollingFrame.ScrollBarThickness = 6
  ScrollingFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

  UIListLayout.Parent = ScrollingFrame
  UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
  UIListLayout.Padding = UDim.new(0, 2)

  AnimPlayerButton.MouseButton1Click:Connect(function()
      AnimPlayerFrame.Visible = not AnimPlayerFrame.Visible
  end)

  AnimPlayerClose.MouseButton1Click:Connect(function()
      AnimPlayerFrame.Visible = false
  end)

  local currentAnimTrack = nil

  PlayButton.MouseButton1Click:Connect(function()
      local player = game.Players.LocalPlayer
      local character = player.Character or player.CharacterAdded:Wait()
      local humanoid = character:WaitForChild("Humanoid")
      local animator = humanoid:WaitForChild("Animator")
    
      local animation = Instance.new("Animation")
      animation.AnimationId = "rbxassetid://" .. AnimIDInput.Text
      currentAnimTrack = animator:LoadAnimation(animation)
      currentAnimTrack:Play()
  end)

  StopButton.MouseButton1Click:Connect(function()
      if currentAnimTrack then
          currentAnimTrack:Stop()
          currentAnimTrack = nil
      end
  end)

  local loggedAnimations = {}

  local function createAnimLabel(animId)
      if loggedAnimations[animId] then return end
      loggedAnimations[animId] = true
    
      local label = Instance.new("TextButton")
      label.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
      label.Size = UDim2.new(1, -4, 0, 25)
      label.Font = Enum.Font.SourceSans
      label.Text = "Animation ID: " .. animId
      label.TextColor3 = Color3.fromRGB(255, 255, 255)
      label.TextSize = 14.000
      label.Parent = ScrollingFrame
    
      label.MouseButton1Click:Connect(function()
          setclipboard(animId:match("rbxassetid://(.*)")or animId)
          label.Text = "Copied!"
          task.wait(1)
          label.Text = "Animation ID: " .. animId
      end)
  end

  local player = game.Players.LocalPlayer
  local character = player.Character or player.CharacterAdded:Wait()
  local humanoid = character:WaitForChild("Humanoid")
  local animator = humanoid:WaitForChild("Animator")

  animator.AnimationPlayed:Connect(function(animTrack)
      createAnimLabel(animTrack.Animation.AnimationId)
  end)

  player.CharacterAdded:Connect(function(char)
      character = char
      humanoid = char:WaitForChild("Humanoid")
      animator = humanoid:WaitForChild("Animator")
    
      animator.AnimationPlayed:Connect(function(animTrack)
          createAnimLabel(animTrack.Animation.AnimationId)
      end)
  end)
